
import matplotlib.pyplot as plt
import numpy as np


# Define the function e^x
def func(x):
    return np.exp(x)

# Define the range for x
x = np.linspace(0, 6, 500)
y_actual = func(x)

# Plotting e^x
plt.figure(figsize=(10, 6))
plt.plot(x, y_actual, label="e^x", color="blue")
plt.title("Plot of e^x")
plt.xlabel("x")
plt.ylabel("y")
plt.legend()
plt.grid()
plt.show()


